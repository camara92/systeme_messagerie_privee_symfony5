    <style>
    body {
    margin: 0px;
    height: 100vh;
}
.container {
    display: flex;
    flex-direction: column;
    
}
.nav-collapse {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.918);
    opacity: 0.9;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffffff;
    display: none;
}
.nav-collapse ul {
    padding: 0px;
    margin: 0px;
    text-align: center;
}
.nav-collapse li {
    box-sizing: border-box;
    list-style: none;
    text-align: center;
    font-family: 'Lekton';
    padding: 10px 20px;
    margin: 10px 10px;
    border: 1px solid white;
}
.nav-collapse li:hover {
    background-color: white;
    color: black;
    border: 1px solid black;
}
.cross {
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 25px;
    right: 25px;
    height: 30px;
    width: 30px;
}
.crossline:first-child{
    position: absolute;
    transform: rotate(45deg);
}
.crossline:nth-child(2){
    position: absolute;
    transform: rotate(-45deg);
}
.header {
    /* background-image: url('https://static.pexels.com/photos/194094/pexels-photo-194094.jpeg');
    background-size: cover;
    background-position: center; */
    height: 60vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: grey;

}
#header {
    animation-duration: 3s;
}
.header-content {
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;  
    height: 55%;
    width: 80%;
    z-index: 1;
}
.header-content>h1 {
    font-family: 'Lekton';
    color: white;
    margin: 0px;
}
.header-background {
    background-image: url('https://static.pexels.com/photos/194094/pexels-photo-194094.jpeg');
    background-size: cover;
    background-position: center;
    position: absolute;
    height: 60%;
    width: 100%;
    z-index: 0;
    opacity: 0.5;
}
.navbar {
    display: flex;
    justify-content:space-between;
    width: 100%;
    z-index: 4;
}
.navbar>h2 {
    margin: 0px;
    padding: 30px;
    font-family: arial;
    color: white;
}
.hamburger {
    display: flex;
    position: relative;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 30px;
    z-index: 3;
}
.line {
    height: 2px;
    position: relative;
    background-color: rgb(255, 255, 255);
    width: 20px;
    margin: 2.5px 0px;
    z-index: 3;
}
.section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 50px;
}
.section ul {
    margin: 0px;
    padding: 0px;
    padding-bottom: 50px;
}
.section li {
    list-style: none;
    display: inline;
    margin: 0px -1px;
    background-color: #E9E9E9;
    color: #969696;
    padding: 5px 20px;
    font-family: 'Lekton';
    letter-spacing: 3px;
    font-size: 14px;
    text-align: center;
}
.section li:hover {
    background-color: #313131;
    color: #fff8f8;
}
.section li:first-child {
    background-color: #313131;
    color: #fff8f8;
}
.gallery {
    width: 90%;
    max-width: 750px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    overflow: hidden;

}

@media (min-width:768px){
    #img-box1:first-child {
        flex-grow: 1;  
    }
    #img-box1:nth-child(2) {
        flex-grow: 2;
        height: 400px;
    }
    #img-box1:nth-child(3) {
        flex-grow: 1;
    }
    #img-box2:first-child {
        flex-grow: 2;
    }
    #img-box2:nth-child(2) {
        flex-grow: 1;
        height: 50px;
    }
    #img-box2:nth-child(3) {
        flex-grow: 1;
    }
}
.img-box {
    width: 50%;
    margin: 0px;
    display: flex;
    flex-direction: column;
    padding: 0px 15px;
}

.img-box>img {
    height: 200px;
    width: 100%;
    padding-bottom: 30px;
}
@media (max-width: 767px
){   
    .header-content>h1 {
        font-size: 17px;
    }
    .section {
        padding-top: 30px;
    }
    .section ul {
        padding-bottom: 30px;
    }
    .section li {
        font-size: 10px;
        display: block;
        margin-bottom: 1px;
    }
    .gallery {
        flex-direction: column;
        align-items: center;
    }
    .img-box {
        width: 70%;
        
    }
    .img-box img {
        height: auto;
    }
  
}
.article {
    height: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 50px;
    padding-bottom: 200px;
    overflow: hidden;
}
.article p {
    width: 80%;
    max-width: 588px;
    text-align: center;
    font-style: italic;
    font-family: 'Lekton';
}
.diamond-div {
    display: flex;
    align-items: center;
    justify-content: center;
}
.outer {
    transform: rotate(45deg);
    height: 10px;
    width: 10px;
    margin: 0px 14px;
    
    border: 2px solid black;
}
.diamond {
    height: 100%;
    width: 100%;
    position: absolute;
    
}
#diamond1 {
    background-color: white;
    
}
#diamond2 {
    background-color: grey;
}
#diamond3 {
    background-color: grey;
}
.footer {
    display: flex;
    flex-direction: column;
    align-items: center;  
    justify-content: center;
    padding-bottom: 50px;
}
.copyright p {
    border-bottom: 1px solid grey;
    text-align: center;
    letter-spacing: 2px;
    padding-bottom: 20px;
    margin: 0px;
    color: grey;
    font-family: arial;
}
#footer {
    animation-duration: 1s;
}
.footer ul {
    margin: 0px;
    padding: 0px;
    padding-top: 20px;
    
}
.footer li {
    list-style: none;
    display: inline;
    margin: 0px 7px;
    color: grey;
    font-family: arial;
    text-align: center;
}
.footer li:hover {
    color: rgba(128, 128, 128, 0.56);
}
</style>
{# end of styles of header css  #}
