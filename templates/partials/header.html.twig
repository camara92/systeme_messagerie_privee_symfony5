    <script>document.getElementById('first').addEventListener('click', changeLiFirst)

document.getElementById('second').addEventListener('click', changeLiSecond);

document.getElementById('ham').addEventListener('click', collapseNav);

document.getElementById('crossham').addEventListener('click', uncollapseNav);

var count = 0;

setInterval(function () {
    let pDiv = document.querySelector('.article p');
    console.log(pDiv);
    if (count == 0) {
        pDiv.className = 'animated fadeOutLeft';
        let diamond = document.querySelector('#diamond1');
        diamond.className = 'diamond animated zoomIn';
        diamond.style.backgroundColor = 'grey';
        diamond = document.querySelector('#diamond2');
        diamond.className += ' animated zoomOut';
        count++;
        console.log(count);
        pDiv.className = 'animated slideInRight';
        setTimeout(function(){
            pDiv.className = '';
        },2000)
        
    }
    else if (count == 1) {
        pDiv.className = 'animated fadeOutLeft';
        let diamond = document.querySelector('#diamond2');
        diamond.className = 'diamond animated zoomIn';
        diamond = document.querySelector('#diamond3');
        diamond.className = 'diamond animated zoomOut';
        count++;
        console.log(count);
        pDiv.className = 'animated slideInRight';
        setTimeout(function(){
            pDiv.className = '';
        },2000)
    }
    else if (count == 2) {
        pDiv.className = 'animated fadeOutLeft';
        let diamond = document.querySelector('#diamond3');
        diamond.className = 'diamond animated zoomIn';
        diamond = document.querySelector('#diamond1');
        diamond.className = 'diamond animated zoomOut';
        count=0;
        console.log(count);
        pDiv.className = 'animated slideInRight'
        setTimeout(function(){
            pDiv.className = '';
        },2000)
    }
    
    
    
}, 5000);


function collapseNav() {
    let navCollapse = document.getElementById('nav-collapse');
    if (navCollapse.className !== 'animate fadeInDown') {
        navCollapse.style.display = 'flex';

        navCollapse.className = 'nav-collapse animated fadeInDown';
    }
    else {

    }
}

function uncollapseNav() {
    let navCollapse = document.getElementById('nav-collapse');

    navCollapse.className = 'nav-collapse animated fadeOutUp';

    setTimeout(function () {
        navCollapse.style.display = 'none';
    }, 300);
}

function changeLiFirst() {
    let liFirst = document.getElementById('first');
    let liSecond = document.getElementById('second');

    liFirst.style.backgroundColor = '#313131';
    liFirst.style.color = '#fff8f8';

    liSecond.style.backgroundColor = '#E9E9E9';
    liSecond.style.color = '#969696';



    let imgbox1 = document.getElementById('imgbox1');

    let imgbox2 = document.getElementById('imgbox2');


    // console.log(imgbox1.childNodes[1].className)
    if (imgbox2.childNodes[1].className == '') {
        imgbox2.childNodes[1].className = 'animated rotateInUpLeft';
        imgbox2.childNodes[3].className = 'animated rotateInUpRight';
        imgbox1.childNodes[1].className = 'animated slideInDown';
        imgbox1.childNodes[3].className = 'animated slideInUp'
        imgbox1.className += ' animated fadeIn';
        imgbox2.className += ' animated fadeIn';
        imgbox1.childNodes[1].src = 'http://cdn.waaterkant.com/wp-content/uploads/2015/03/Maria-Ustinova-B-ANNET-7.png';
        imgbox1.childNodes[3].src = 'https://static.pexels.com/photos/735279/pexels-photo-735279.jpeg';
        imgbox1.childNodes[5].src = 'http://carla-izumi-bamford.com/wp-content/uploads/2016/04/10-rules-of-minimalist-design-less-is-more.png';
        imgbox2.childNodes[1].src = 'https://cdn.shopify.com/s/files/1/0229/8747/products/Black_white_striped_foil_balloons_1024x1024.png?v=1502174446';
        imgbox2.childNodes[3].src = 'https://i.pinimg.com/originals/bc/8b/2f/bc8b2fad3ff6321ddee751367e58ca73.jpg';
        imgbox2.childNodes[5].src = 'https://www.demilked.com/magazine/wp-content/uploads/2016/01/minimal-photography-funny-balloons-peechaya-burroughs-6.jpg';
    }
    else {
        imgbox2.childNodes[1].className = '';
        imgbox2.childNodes[3].className = '';
        imgbox1.childNodes[1].className = '';
        imgbox1.childNodes[3].className = '';
        imgbox1.className = 'img-box';
        imgbox2.className = 'img-box';
        setTimeout(changeLiFirst, 200);
    }
}

function changeLiSecond() {
    let liFirst = document.getElementById('first');
    let liSecond = document.getElementById('second');

